# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                           controllers.Application.index()
GET         /login                                      controllers.Application.login()
POST        /login                                      controllers.Application.authenticate()
GET         /logout                                     controllers.Application.logout()
POST        /validateexist                              controllers.Application.validateExist()
POST        /validatelistexist                          controllers.Application.validateListExist()
GET         /profesor                                   controllers.Profesor.index()
POST        /profesor/list                              controllers.Profesor.list()
POST        /profesor/listquestion                      controllers.Profesor.listQuestion()
POST        /profesor/savequestion                      controllers.Profesor.saveQuestion()
POST        /profesor/savechoice                        controllers.Profesor.saveChoice()
POST        /profesor/updatechoiceidquestion            controllers.Profesor.updateChoiceIdQuestion()
POST        /profesor/saveprofessorquestion             controllers.Profesor.saveProfessorQuestion()
GET         /alumno                                     controllers.Alumno.index()
GET         /administrador                              controllers.Administrador.index()

POST        /administrador/listtheme                    controllers.Administrador.listTheme()
POST        /administrador/listcycle                    controllers.Administrador.listCycle()
POST        /administrador/listsection                  controllers.Administrador.listSection()
POST        /administrador/listcyclexcourses             controllers.Administrador.listCycleCourses()
POST        /administrador/listcoursesnotincycle        controllers.Administrador.listCoursesNotInCycle()

POST        /administrador/addcourses                   controllers.Administrador.addCourses()
POST        /administrador/addthemes                    controllers.Administrador.addThemes()
POST        /administrador/addcycles                    controllers.Administrador.addCycles()
POST        /administrador/addsections                  controllers.Administrador.addSections()
POST        /administrador/adduser                      controllers.Administrador.addUser()
POST        /administrador/addprofessor                 controllers.Administrador.addProfessor()
POST        /administrador/addstudent                   controllers.Administrador.addStudent()
POST        /administrador/addcyclexcourse              controllers.Administrador.addCycleCourse()

POST        /administrador/findmodel                    controllers.Administrador.findModel()
POST        /administrador/updatemodel                  controllers.Administrador.updateModel()
POST        /administrador/deletemodel                  controllers.Administrador.deleteModel()
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                               controllers.Assets.at(path="/public", file)
