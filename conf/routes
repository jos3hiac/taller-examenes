# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                       controllers.Application.index()
GET         /login                                  controllers.Application.login()
POST        /login                                  controllers.Application.authenticate()
GET         /logout                                 controllers.Application.logout()
POST        /validateexist                          controllers.Application.validateExist()
POST        /validatelistexist                      controllers.Application.validateListExist()
GET         /profesor                               controllers.Profesor.index()
POST        /profesor/list                          controllers.Profesor.list()
POST        /profesor/listquestion                  controllers.Profesor.listQuestion()
POST        /profesor/savequestion                  controllers.Profesor.saveQuestion()
POST        /profesor/savechoice                    controllers.Profesor.saveChoice()
POST        /profesor/updatechoiceidquestion        controllers.Profesor.updateChoiceIdQuestion()
POST        /profesor/saveprofessorquestion         controllers.Profesor.saveProfessorQuestion()
GET         /alumno                                 controllers.Alumno.index()
GET         /administrador                          controllers.Administrador.index()
POST        /administrador/findcourse               controllers.Administrador.findCourse()
POST        /administrador/findtheme                controllers.Administrador.findTheme()
POST        /administrador/listtheme                controllers.Administrador.listTheme()
POST        /administrador/addcourses               controllers.Administrador.addCourses()
POST        /administrador/addthemes                controllers.Administrador.addThemes()
POST        /administrador/updatecourse             controllers.Administrador.updateCourse()
POST        /administrador/updatetheme              controllers.Administrador.updateTheme()
POST        /administrador/deletecourse             controllers.Administrador.deleteCourse()
POST        /administrador/deletetheme              controllers.Administrador.deleteTheme()
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                           controllers.Assets.at(path="/public", file)
